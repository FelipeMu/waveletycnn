function plot_signal_and_scalogram(tms,signal_to_analyze,frq,cfs, name_wavelet, file)
    figure
    subplot(2,1,1)
    plot(tms,signal_to_analyze)
    axis tight
    title(sprintf("Se√±al y Escalograma - Wavelet: %s", name_wavelet)); 
    xlabel("Time (s)")
    ylabel("Amplitude")
    subplot(2,1,2)
    surface(tms,frq,abs(cfs))
    axis tight
    shading flat
    xlabel("Time (s)")
    ylabel("Frequency (Hz)")
    set(gca,"yscale","log")
end